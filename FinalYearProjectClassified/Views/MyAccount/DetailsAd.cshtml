@model FinalYearProjectClassified.Models.MyAccount.DetailsAdViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Ad Details</h2>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Model.Name
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Model.Description
        </dd>
        
        <dt>
            Price
        </dt>

        <dd>
            @Model.Price
        </dd>

        <dt>
            Post Code
        </dt>

        <dd>
            @Model.PostCode
        </dd>

        <dt>
            Created on
        </dt>

        <dd>
            @Model.CreatedOn.ToLongDateString() (@Model.CreatedOn.ToShortTimeString())
        </dd>

    </dl>
</div>
<div>
    <a href="@Url.Action("EditAd", new { id = Model.AdId })" class="btn btn-warning">Edit</a>

    @using (Html.BeginForm("DisableAd", "MyAccount", new { id = Model.AdId }, FormMethod.Post))
    {
        <input type="submit" value="Disable" class="btn btn-danger" onclick="return confirm('Are you sure you want to disable this ad?')" />
    }

    @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-primary" })
</div>
