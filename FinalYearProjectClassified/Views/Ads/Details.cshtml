@model FinalYearProjectClassified.Models.ViewModels.Ads.DetailsViewModel

@{
    ViewBag.Title = "Ad Details";
}

@section Scripts {
    
    @Scripts.Render("https://maps.googleapis.com/maps/api/js?key=AIzaSyAAogaRLCQNHLDPbnnGnvtYAh5vCJQjEnA")
    @Scripts.Render("~/js/app/posts/details")

}

<h2>Ad Details</h2>

<div>
    <hr />
    
    <div id="detailsdata" data-ad-id="@Model.PostCode" class="col-md-6 col-xs-10">
        
        <img src="@Url.Content(Model.ImageFileName)" width="500" class="img-responsive img-rounded" />

        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.Name)</dt>
            <dd>@Html.DisplayFor(model => model.Name)</dd>

            <dt>@Html.DisplayNameFor(model => model.Description)</dt>
            <dd>@Html.DisplayFor(model => model.Description)</dd>

            <dt>@Html.DisplayNameFor(model => model.PostCode)</dt>
            <dd>@Html.DisplayFor(model => model.PostCode)</dd>

            <dt>@Html.DisplayNameFor(model => model.CreatedOn)</dt>
            <dd>@Html.DisplayFor(model => model.CreatedOn)</dd>

            <dt>@Html.DisplayNameFor(model => model.Price)</dt>
            <dd>@Html.DisplayFor(model => model.Price)</dd>
        </dl>
    </div>
    <div class="col-md-6 col-xs-10">
        <div id="googleMap" class="img-responsive img-rounded"  style="width:400px; height:350px;" ></div>
    </div>
</div>

