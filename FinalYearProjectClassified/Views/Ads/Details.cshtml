@model FinalYearProjectClassified.Models.ViewModels.Ads.DetailsViewModel

@{
    ViewBag.Title = "Ad Details";
}

@section Scripts {
    
    @Scripts.Render("https://maps.googleapis.com/maps/api/js?key=AIzaSyAAogaRLCQNHLDPbnnGnvtYAh5vCJQjEnA")
    @Scripts.Render("~/js/app/posts/details")

}

<h2>Ad Details - @Model.Name</h2>

<div>
    <hr />

    <div id="detailscontainer" class="col-md-6 col-xs-12">

        @foreach (var image in Model.Images)
        {
            <div class="img-responsive">
                <img src="@Url.Content(image.FilePath)" style="width:100%" class="img-responsive img-rounded" />
            </div>
        }

    </div>

    <div class="col-md-6 col-xs-12">
        <div class="panel panel-primary">
            <div class="panel-body">
                <div id="detailsdata" data-ad-id="@Model.PostCode">
                    <dl class="dl-horizontal">
                        <dt>@Html.DisplayNameFor(model => model.Description)</dt>
                        <dd>@Html.DisplayFor(model => model.Description)</dd>

                        <dt>@Html.DisplayNameFor(model => model.CreatedOn)</dt>
                        <dd>@Html.DisplayFor(model => model.CreatedOn)</dd>

                        <dt>@Html.DisplayNameFor(model => model.Price)</dt>
                        <dd>@Html.DisplayFor(model => model.Price)</dd>
                    </dl>
                    <textarea>Contact the Ad publisher!</textarea>
                </div>
            </div>
        </div>
        <div id="googleMap" class="img-responsive img-rounded" style="width:100%; height:400px;"></div>
    </div>


</div>