@model FinalYearProjectClassified.Models.Home.IndexViewModel


@{
    ViewBag.Title = "Home";
}

@if (Model.Ads.Count == 0)
{
<div class="jumbotron">
    <h1>Sorry..</h1>
    <p class="lead">There are no Ads at the moment. Sign-in To create an Ad!</p>
</div>
}
else
{

    <div class="jumbotron">
        <p>search bar</p>
        <p>some categories</p>
        
    </div>


   

    foreach (var ad in Model.Ads)
    {
        <div class="col-md-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <img src="@Url.Content("~/Content/Images/test.jpg")" alt="" width="225">
                </div>

                <div class="panel-body">
                    
                    <p>@ad.Description</p>
                    <p>@ad.CreatedOn.ToLongDateString() (@ad.CreatedOn.ToShortTimeString())</p>
                    <p>By: @ad.User.FirstName</p>
                    <p>@String.Format("{0:C2}", ad.Price)</p>
                </div>
            </div>
        </div>
    }
}